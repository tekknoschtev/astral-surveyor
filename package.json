{
  "name": "astral-surveyor",
  "version": "1.0.0",
  "description": "A chill, tranquil space exploration game",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "node -e \"const fs=require('fs'); const path=require('path'); fs.mkdirSync('dist', {recursive:true}); fs.copyFileSync('game.html', 'dist/index.html'); fs.cpSync('css', 'dist/css', {recursive:true});\"",
    "dev": "tsc --watch",
    "clean": "node -e \"const fs=require('fs'); try{fs.rmSync('dist',{recursive:true,force:true})}catch(e){} console.log('Cleaned dist directory')\"",
    "rebuild": "npm run clean && npm run build",
    "test": "npm run build && vitest run",
    "test:watch": "npm run build && vitest",
    "test:coverage": "npm run build && vitest run --coverage",
    "test:ui": "npm run build && vitest --ui"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@vitest/coverage-v8": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "eslint": "^9.32.0",
    "globals": "^16.3.0",
    "jsdom": "^25.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.39.0",
    "vitest": "^2.0.5"
  },
  "keywords": [
    "game",
    "space",
    "exploration",
    "browser",
    "html5"
  ],
  "author": "Astral Surveyor Team",
  "license": "MIT"
}
